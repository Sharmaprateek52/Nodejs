extends layout

block content
 .container
  form(method='post',action='contact/send')
   h1 Contacts
    .form-group
    label Name
    input.form-control(type='text',name="name",placeholder="Enter name")
    .form-group
    label Email
    input.form-control(type='email',name="email",placeholder="Enter email")
    .form-group
    label Message
    textarea.form-control(name="message",placeholder="Enter messages")
    button.btn.btn-light(type='submit') Submit

